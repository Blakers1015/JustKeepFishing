<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basicLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nemo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textForCam"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="73dp"
        android:text="@string/button_for_camera"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/CameraID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/CameraID"
        android:layout_width="50dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="218dp"
        android:layout_marginBottom="108dp"
        android:onClick="Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textForCam"
        app:srcCompat="@drawable/camera" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="46dp"
        android:layout_height="39dp"
        android:layout_marginStart="181dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="118dp"
        android:onClick="Gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CameraID"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/gallery" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="127dp"
        android:text="@string/button_for_gallery"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toEndOf="@+id/textForCam"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>