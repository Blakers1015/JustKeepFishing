<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basicLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nemo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textForCam"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="16dp"
        android:text="@string/button_for_camera"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/CameraID"
        app:layout_constraintEnd_toStartOf="@+id/textForGallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/CameraID"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="233dp"
        android:onClick="Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textForCam"
        app:srcCompat="@drawable/camera" />

    <ImageButton
        android:id="@+id/GalleryID"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="154dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="233dp"
        android:onClick="Gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CameraID"
        app:layout_constraintTop_toBottomOf="@+id/textForGallery"
        app:srcCompat="@drawable/gallery" />

    <TextView
        android:id="@+id/textForGallery"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="234dp"
        android:layout_marginBottom="16dp"
        android:text="@string/button_for_gallery"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/GalleryID"
        app:layout_constraintStart_toEndOf="@+id/textForCam"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>